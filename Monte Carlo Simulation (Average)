    xa=0
    ya=0
    Jeb=Jeb+1
    while (q<10000):
      q=q+1
      g=random.choice(Data)
      Lisp.append(g)
      x=Average(Lisp)
    a=100+x
    b=a/100
    x=b
    Mere_List.append(x)
    while (z<Chubster-1):
      while (qa<10000):
        qa=qa+1
