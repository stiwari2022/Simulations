print ("Monte Carlo Simulation")
Data=[1, -1]
def Chub(Chubni, Chubster):
  Chubni=int(input("Enter the number of lines: "))
  Chubster=int(input("Enter the number of simulations: "))
























































  def Average(AND_and_OR):
    return sum(AND_and_OR)/len(AND_and_OR)
  Jeb=0
  Big=[]
  while (Jeb<Chubni):
    Mere_List=[]
